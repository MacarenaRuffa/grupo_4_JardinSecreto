<%- include('partials/head', {styles : ['stylesLogin']}) %>
<body>
    <div class="logo-btn">
        <img src="/images/Logo-verde.png" alt="Logo">
    </div>
    <div class="wrapper">
        <form action="/register" method="POST">
            <h1>¡Regístrate!</h1>
            <div class="input-box">
                <input type="text" name="name" placeholder="Nombre y apellido" required>
                <i class='bx bx-user' style='color:#435334'></i>
            </div>
            <div class="input-box">
                <input type="text" name="user" placeholder="Nombre de usuario" required>
                <i class='bx bx-user' style='color:#435334'></i>
            </div>
            <div class="input-box">
                <input type="email" name="email" placeholder="E-mail" required>
                <i class='bx bx-envelope' style='color:#435334'></i>
            </div>
            <div class="input-box">
                <input type="date" name="birth_date" placeholder="Fecha de nacimiento" required>
                <i class='bx bx-calendar' style='color:#435334'></i>
            </div>
            <div class="input-box">
                <select name="country" required>
                    <option value="" disabled selected>Pais</option>
                    <option value="Argentina">Argentina</option>
                    <option value="Brazil">Brazil</option>
                    <option value="Uruguay">Uruguay</option>
                    <option value="Paraguay">Paraguay</option>
                </select>
                <i class='bx bx-globe' style='color:#435334'></i>
            </div>
            <div class="input-box">
                <select name="province" required>
                    <option value="" disabled selected>Provincia</option>
                    <option value="Santa Fe">Santa Fe</option>
                    <option value="Cordoba">Cordoba</option>
                    <option value="La Rioja">La Rioja</option>
                    <option value="Catamarca">Catamarca</option>
                    <option value="Jujuy">Jujuy</option>
                </select>
                <i class='bx bx-map' style='color:#435334'></i>
            </div>
            <div class="input-box">
                <select name="city" required>
                    <option value="" disabled selected>Ciudad</option>
                    <option value="Rafaela">Rafaela</option>
                    <option value="Ceres">Ceres</option>
                    <option value="Susana">Susana</option>
                    <option value="Sunchales">Sunchales</option>
                    <option value="Maria Juana">Maria Juana</option>
                </select>
                <i class='bx bx-map' style='color:#435334'></i>
            </div>
            <div class="input-box">
                <select name="gender" required>
                    <option value="" disabled selected>Género</option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                    <option value="No Binario">No Binario</option>
                    <option value="Otro">Otro</option>
                </select>
                <i class='bx bx-user' style='color:#435334'></i>
            </div>
            <h4>Intereses</h4>
            <div class="interests">
                <div>
                    <input type="checkbox" name="interests" value="Plantas" id="interest-plantas">
                    <label for="interest-plantas">Plantas</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" value="Suculentas" id="interest-suculentas">
                    <label for="interest-suculentas">Suculentas</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" value="Semillas" id="interest-semillas">
                    <label for="interest-semillas">Semillas</label>
                </div>
                <div>
                    <input type="checkbox" name="interests" value="Herramientas" id="interest-herramientas">
                    <label for="interest-herramientas">Herramientas</label>
                </div>
            </div>
            <h4>Elegí tu foto de usuario</h4>
            <input type="file" name="avatar" required>
            <div class="input-box">
                <input type="password" name="pass" placeholder="Elegí tu contraseña" required>
                <i class='bx bx-lock' style='color:#435334'></i>
            </div>
            <div class="input-box">
                <input type="password" name="pass_confirm" placeholder="Confirmá tu contraseña" required>
                <i class='bx bx-lock' style='color:#435334'></i>
            </div>
            <div>
                <input type="checkbox" name="terms" value="d" id="terms">
                <label for="terms">Acepto los términos y condiciones de El Jardin Secreto</label>
            </div>
            <button type="submit" class="btn" >Enviar</button>
            <button type="reset" class="btn">Borrar</button>
        </form>
    </div>
</body>
</html>