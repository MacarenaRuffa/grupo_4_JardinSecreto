<%- include('partials/head', {styles : ['stylesLogin']}) %>
<body>
    <div class="logo-btn">
        <img src="/images/Logo-verde.png" alt="Logo">
    </div>
    <div class="wrapper">
        <form action="/login" method="POST">
            <h1>Iniciar Sesión</h1>
            <div class="input-box">
                <input type="text" placeholder="Usuario" required>
                <i class='bx bx-user' style='color:#435334'></i>
            </div>
            <div class="input-box">
                <input type="password" placeholder="Contraseña" required>
                <i class='bx bx-lock' style='color:#435334'></i>
            </div>
            <div class="remember-forgot">
                <label><input type="checkbox"> Recordar datos</label>
                <a href="#"> ¿Olvidó su contraseña?</a>
            </div>
            <button type="Submit" class="btn">Iniciar sesión</button>
            <div class="register-link">
                <p>¿No tienes una cuenta? <a href="/users/register">Registrarse</a></p>
            </div>
        </form>
    </div>
</body>
</html>