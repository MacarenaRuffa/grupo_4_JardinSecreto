<%- include('partials/head', {styles : ['stylesLogin']}) %>

    <body>
        <div class="logo-btn">
            <a href="/"><img src="/images/Logo-verde.png" alt="Logo"></a>
            
        </div>
        <div class="wrapper">
            <form action="/users/login" method="POST">

                <h1>Iniciar Sesión</h1>
                <div class="input-box">
                    <input type="text" name="email" placeholder="E-mail" 
                    required value="<%= locals.oldData ? locals.oldData.email : '' %>">
                    <i class='bx bx-user' style='color:#435334'></i>
                </div>
                <% if (locals.errors && locals.errors.email) { %>
                    <p class="error-msg">
                        <%= locals.errors.email.msg %></p>
                <% } %>
                <div class="input-box">
                    <input type="password" name="password" placeholder="Contraseña" required>
                    <i class='bx bx-lock' style='color:#435334'></i>
                </div>
                <% if (locals.errors && locals.errors.password) { %>
                    <p class="error-msg">
                        <%= locals.errors.password.msg %></p>
                <% } %>
                <div class="remember-forgot">
                    <input type="checkbox" name="recordame">
                    <label for="">Recordame</label>
                </div>

                <button type="Submit" class="btn">Iniciar sesión</button>
                <div class="register-link">
                    <p>¿No tienes una cuenta? <a href="/users/register">Registrarse</a></p>
                </div>
            </form>
        </div>
    </body>

    </html>