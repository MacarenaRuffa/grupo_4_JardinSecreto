<%- include('partials/head', {styles : ['styleProduct-detail']}) %>

    <body>
        <%- include('partials/header') %>
            <main>
                <section class="user">
                    <h3>Datos personales</h3>
                    <p>
                        <%= locals.user.name %>
                    </p>
                    <p>
                        <%= locals.user.email %>
                    </p>

                    <div class="crud-buttons">
                        <button><a href="/users/<%= locals.user?.id %>/edit"
                                class="action-button edit">Editar</a></button>
                        <form action="/users/<%= locals.user?.id %>/delete?_method=DELETE" method="POST"
                            style="display: inline-flex">
                            <button type="submit" class="action-button delete">Eliminar</button>
                        </form>
                </section>

            </main>
            <%- include('partials/footer') %>
    </body>

    </html>