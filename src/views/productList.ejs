<%- include('partials/head', {styles : ['stylesINDEX']}) %>
<body>
    <%- include('partials/header') %>
  
    <main>
        <section>
            <h3>Destacados del mes</h3>
            <section class="bestsellers">
                <% locals.products && locals.products.forEach((product) => { %>
                    <div class="products">
                            <article>
                                <img src="../images/products/<%= product.image %>" alt="imagen" class="product_img">
                                <div class="main-article">
                                    <h4 class="name"><%=product.name%></h4>
                                    <p class="price"><a href="/products/detail/<%= product.id %>"><i class="fas fa-info-circle fa-lg"></a></i> Desde $ <%= product.price %><i class="fas fa-cart-plus fa-lg"></a></i></p>
                                </div>
                            </article>
                    </div>   
                <% }) %>
            </section>
        </section>

       <% if (user.rol==="admin"){  %> <div class = "crud-buttons">
        <a href="/products/create"><button type="submit" class="btn-products">Agreg√° un producto</button></a>
    </div> <% } %>
    
    </main>
    <%- include('partials/footer') %>
 
</body>
</html>